{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnectionString": ""
  },
  "Repositories": {
    "BookImageRepository": {
      "ImageStoragePath": "c:\\library-example-images"
    }
  },
  "Validators": {
    "Books": {
      "BookUploadImageDto": {
        "ImageMaxSizeInKBytes": 2048,
        "SupportedImageTypes": [
          "image/jpeg",
          "image/jpg",
          "image/giff",
          "image/png"
        ]
      }
    }
  },
  "AllowedHosts": "*"
}
